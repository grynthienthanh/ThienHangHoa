@model WebApplication1.Models.MAT_HANG

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Edit</h2>

<h4>Sửa mặt hàng</h4>
<hr />
<div class="row">
    <div class="col-md-4">
