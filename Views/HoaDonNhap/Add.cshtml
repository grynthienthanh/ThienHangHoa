@model WebApplication1.Models.HD_NHAP

@{
    ViewData["Title"] = "Add";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var lstNCC = (IEnumerable<SelectListItem>)ViewData["ViewIDNhaCungCap"];
    string abc="kjj";
}

<h2>Add</h2>

<h4>Thêm hóa đơn nhập</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Add">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">               
            </div>
            <div class="form-group">
                <label asp-for="MaNCC" class="control-label">Tên nhà cung cấp</label>
                @Html.DropDownListFor(n=>n.MaNCC,lstNCC)
            </div>           
            <div class="form-group">
                <label asp-for="Ngay" class="control-label">Ngày</label>
                <input asp-for="Ngay" class="form-control" />
                <span asp-validation-for="Ngay" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TongTienNhap" class="control-label">Tổng tiền nhập</label>
                <input asp-for="TongTienNhap" class="form-control" />
                <span asp-validation-for="TongTienNhap" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
