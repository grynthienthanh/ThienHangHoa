@model WebApplication1.Models.HD_XUAT
@{ 
    ViewData["Title"] = "Add";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var lstKhachHang = (IEnumerable<SelectListItem>)ViewData["MaKhachHang"];
    
}

<h2>Add</h2>

<h4>Thêm hóa đơn xuất</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Add">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="MaKH" class="control-label">Tên khách hàng</label>
                @Html.DropDownListFor(n=>n.MaKH,lstKhachHang)
            </div>
            <div class="form-group">
                <label asp-for="Ngay" class="control-label">Ngày</label>
                <input asp-for="Ngay" class="form-control" />
                <span asp-validation-for="Ngay" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TongTien" class="control-label">Tổng Tiền</label>
                <input asp-for="TongTien" class="form-control" />
                <span asp-validation-for="TongTien" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PhiVanCHuyen" class="control-label">Phí vận chuyển</label>
                <input asp-for="PhiVanCHuyen" class="form-control" />
                <span asp-validation-for="PhiVanCHuyen" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TongCong" class="control-label">Tổng Cộng (auto)</label>

                <div class="form-group">
                    <input type="submit" value="Create" class="btn btn-default" />
                </div>
                </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
