@model WebApplication1.Models.BAO_CAO_TON

@{
    ViewData["Title"] = "Add";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var lstNCC = (IEnumerable<SelectListItem>)ViewData["ViewIDNhaCungCap"];
    var lstMH = (IEnumerable<SelectListItem>)ViewData["MaMatHang"];
}

<h2>Add</h2>

<h4>Thêm báo cáo tồn</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Add">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Thang" class="control-label"></label>
                <input asp-for="Thang" class="form-control" />
                <span asp-validation-for="Thang" class="text-danger"></span>
                
            </div>
            <div class="form-group">
                <label asp-for="MaMH" class="control-label">Mã hàng Hóa</label>
                @Html.DropDownListFor(n => n.MaMH, lstMH)
            </div>
            <div class="form-group">
                <label asp-for="MANCC" class="control-label">Mã nhà cung cấp </label>
                @Html.DropDownListFor(n => n.MANCC, lstNCC)
            </div>
            <div class="form-group">
                <label asp-for="TonDau" class="control-label">Tồn đầu</label>
                <input asp-for="TonDau" class="form-control" />
                <span asp-validation-for="TonDau" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TonCuoi" class="control-label">Tồn cuối</label>
                <input asp-for="TonCuoi" class="form-control" />
                <span asp-validation-for="TonCuoi" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PhatSinh" class="control-label">Phát sinh(auto)</label>
                
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
